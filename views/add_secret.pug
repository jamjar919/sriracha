extends /includes/layout

block container
	script(src='/socket.io/socket.io.js')
	p #{user}
	.container
	.starter-template
		.detailcontainer
			h1 Secret Add Page for #{user}
			p
			|    Psst, #{friendname}! Type in (or upload an image of) a secret you know about #{user}.
			
		form(method='POST' action='/api/addsecret')
			.form-group
				label(for='exampleTextarea') A secret about #{user}
				textarea#exampleTextarea.form-control(rows='3')
			//- add pictures
			.form-group#pictureupload
				#upload_img_container
					input(id="input_images" name='images' type="file" multiple="true")
			button.btn.btn-primary(type='submit') Submit
	script
		include assets/upload.js
